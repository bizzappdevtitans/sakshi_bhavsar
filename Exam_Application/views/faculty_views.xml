<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="faculty_details_list" model='ir.ui.view'>
        <field name="name">faculty.details.list</field>
        <field name="model">faculty.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="faculty_id"></field>
                <field name="faculty_subject_id"></field>
                <field name="faculty_name"></field>
                <field name="faculty_unique_code"></field>
                <field name="faculty_fees" widget="badge"></field>
                <field name="faculty_designation"></field>
                <field name="faculty_subject_no"></field>
                <field name="faculty_states"></field>
                <field name="faculty_subject_starting_exam_date"></field>
                <field name="faculty_gender" widget="badge"></field>
                <field name="faculty_subject_ending_exam_date_time" widget="remaining_days"></field>
                <field name="faculty_availability" widget="boolean_toggle"></field>
                <field name="faculty_documents_attach"></field>
                <field name="faculty_paper_state_search"></field>
            </tree>
        </field>
    </record>

    <record id="faculty_details_form" model='ir.ui.view'>
        <field name="name">faculty.details.form</field>
        <field name="model">faculty.details</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                    <field name="faculty_states" widget="statusbar" statusbar_visible="cancel,in progress,done"/>
                    <button string="Paper Cancel" class="btn-danger" name="faculty_action_button" type="object"/>
                    <button string="Paper In Progress" class="btn-primary" name="faculty_in_progress_button" type="object"/>
                    <button string="Paper Done" class="btn-success" name="faculty_action_done" type="object"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h3>
                            <field name="faculty_sequence_number" readonly='1'/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="faculty_id"></field>
                            <field name="faculty_subject_id"></field>
                            <field name="faculty_name"></field>
                            <field name="faculty_unique_code"></field>
                            <field name="faculty_designation"></field>
                            <field name="faculty_fees"></field>
                            <field name="faculty_subject_no"></field>
                            <field name="faculty_states"></field>
                        </group>
                        <group>
                            <field name="faculty_subject_starting_exam_date"></field>
                            <field name="faculty_gender"></field>
                            <field name="faculty_subject_ending_exam_date_time"></field>
                            <field name="faculty_availability"></field>
                            <field name="faculty_documents_attach"></field>
                            <field name="faculty_paper_state_search"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="faculty_details_search" model='ir.ui.view'>
        <field name="name">faculty.details.search</field>
        <field name="model">faculty.details</field>
        <field name="arch" type="xml">
            <search>
                <field name="faculty_id"></field>
                <field name="faculty_subject_id"></field>
                <field name="faculty_name"></field>
                <field name="faculty_unique_code"></field>
                <field name="faculty_fees"></field>
                <field name="faculty_designation"></field>
                <field name="faculty_subject_no"></field>
                <field name="faculty_states"></field>
                <field name="faculty_subject_starting_exam_date"></field>
                <field name="faculty_gender"></field>
                <field name="faculty_subject_ending_exam_date_time"></field>
                <field name="faculty_availability"></field>
                <field name="faculty_documents_attach"></field>
            </search>
        </field>
    </record>

    <record id="action_faculty_details" model="ir.actions.act_window">
        <field name="name">Faculty Details</field>
        <field name="res_model">faculty.details</field>
        <field name="view_mode">tree,search,form</field>
    </record>
</odoo>
