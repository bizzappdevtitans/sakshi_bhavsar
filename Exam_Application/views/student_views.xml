<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="exam_details_list" model='ir.ui.view'>
        <field name="name">exam.details.list</field>
        <field name="model">exam.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name_field" widget="badge"></field>
                <field name="state_field" widget="badge"></field>
                <field name="student_count"></field>
                <field name="date_field"></field>
                <field name="date_time_field" widget="remaining_days"></field>
                <field name="amount_field" widget="percentpie"></field>
                <field name="term_cond" widget="html"></field>
                <field name="select_option" widget="radio"></field>
                <field name="roll_number"></field>
                <field name="color_widget"  widget="color_picker"></field>
                <field name="boolean_field" widget="boolean_toggle"></field>
                <field name="boolean_rating_field" widget="boolean_favorite"></field>
                <field name="exam_desc"></field>
                <field name="documents_attach"></field>
                <field name="relation_field1" widget="many2one_avatar"></field>
                <field name="relation_field2" widget="many2many_tags"></field>
                <field name="relation_field3"></field>
            </tree>
        </field>
    </record>

    <record id="exam_details_form" model='ir.ui.view'>
        <field name="name">exam.details.form</field>
        <field name="model">exam.details</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state_field" widget="statusbar" statusbar_visible="draft,in progress,done"/>
                    <button string="Button Draft" class="btn-primary" name="action_draft" type="object"/>
                    <button string="Button In Progress" class="btn-success" name="action_in_progress" type="object"/>
                    <button string="Button Done" class="btn-danger" name="action_done" type="object"/>
                    <!--<field name="state_field" widget="statusbar" options="{'clickable': True}" statusbar_visible="draft,in_progress,done"/> onclick button-->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_count_student" type="object" class="oe_start_button" icon="fa-solid fa-user" help="This is smart button having student details according to student id">
                            <div class="o_stat_info">
                                <field name="student_count" class="o_stat_value"/>
                                <span class="o_stat_text">Student records</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name_field"></field>
                            <field name="date_field"></field>
                            <field name="date_time_field"></field>
                            <field name="amount_field"></field>
                            <field name="term_cond"></field>
                            <field name="relation_field2" widget="many2many_tags"></field>
                            <field name="documents_attach"></field>
                        </group>
                        <group>
                            <field name="select_option"></field>
                            <field name="roll_number"></field>
                            <field name="color_widget" widget="color_picker"></field>
                            <field name="boolean_field"></field>
                            <field name="boolean_rating_field"></field>
                            <field name="exam_desc"></field>
                            <field name="relation_field1"></field>
                        </group>
                    </group>
                </sheet>
                <notebook>
                    <page string="Student Details(One2many field)">
                        <field name="relation_field3">
                            <tree editable="bottom">
                                    <field name="student_id"></field>
                                    <field name="student_name"></field>
                                    <field name="student_fees"></field>
                                    <field name="student_exam_subject_name"></field>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="exam_details_search" model='ir.ui.view'>
        <field name="name">exam.details.search</field>
        <field name="model">exam.details</field>
        <field name="arch" type="xml">
            <search>
                <field name="name_field"></field>
                <field name="date_field"></field>
                <field name="date_time_field"></field>
                <field name="boolean_field"></field>
                <field name="amount_field"></field>
                <field name="term_cond"></field>
                <field name="select_option"></field>
                <field name="roll_number"></field>
                <field name="documents_attach"></field>
                <field name="exam_desc"></field>
                <field name="relation_field1"></field>
                <field name="relation_field2"></field>
                <field name="relation_field3"></field>

                <filter name="filter_selection_option" string="A selector" domain="[('select_option','=','a')]"/>
                <separator/>
                <filter name="filter_selection_option" string="B selector" domain="[('select_option','=','b')]"/>
                <separator/>
                <filter name="filter_amount_field" string="Amount filter less than 200" domain="[('amount_field','&lt;=',200)]"/>
                <separator/>
                <filter name="filter_status_field" string="Status Filter having Done" domain="[('state_field','=','done')]"/>

                <group expand='0' string="Group By">
                    <filter name="groupby_selection_option" string="Selection Option(A/B)" context="{'group_by':'select_option'}"/>
                    <filter name="groupby_roll_number" string="GroupBy Roll Number" context="{'group_by':'roll_number'}"/>
                    <filter name="groupby_boolean_field" string="GroupBy True/False" context="{'group_by':'boolean_field'}"/>
                    <filter name="groupby_date_field" string="GroupBy Only Date" context="{'group_by':'date_field'}"/>
                    <filter name="groupby_status_field" string="GroupBy StatusBar" context="{'group_by':'state_field'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="exam_details_kanban" model='ir.ui.view'>
        <field name="name">exam.details.kanban</field>
        <field name="model">exam.details</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name_field"></field>
                <field name="roll_number"></field>
                <field name="exam_desc"></field>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <span t-esc="record.name_field.raw_value"></span>
                            <span t-esc="record.roll_number.raw_value"></span>
                            <span t-esc="record.exam_desc.raw_value"></span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="student_details_list" model='ir.ui.view'>
        <field name="name">student.details.list</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student_id"></field>
                <field name="student_enrollment_no"></field>
                <field name="student_name" widget="badge"></field>
                <field name="student_address"></field>
                <field name="student_confirmation"></field>
                <field name="student_fees"></field>
                <field name="student_exam_subject_name" widget="badge"></field>
                <field name="student_exam_date"></field>
                <field name="student_exam_date_time"></field>
                <field name="student_exam_hallticket_attach"></field>
            </tree>
        </field>
    </record>


    <record id="student_details_form" model='ir.ui.view'>
        <field name="name">student.details.form</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="student_id"></field>
                            <field name="student_enrollment_no"></field>
                            <field name="student_name"></field>
                            <field name="student_address"></field>
                            <field name="student_confirmation"></field>
                        </group>
                        <group>
                            <field name="student_fees"></field>
                            <field name="student_exam_date"></field>
                            <field name="student_exam_date_time"></field>
                            <field name="student_exam_subject_name"></field>
                            <field name="student_exam_hallticket_attach"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student_details" model="ir.actions.act_window">
        <field name="name">Exam Details</field>
        <field name="res_model">exam.details</field>
        <field name="view_mode">tree,kanban,search,form</field>
    </record>

     <record id="action_faculty_details" model="ir.actions.act_window">
        <field name="name">Faculty Details</field>
        <field name="res_model">faculty.details</field>
        <field name="view_mode">tree,search,form</field>
    </record>



</odoo>
