<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="subject_details_list" model='ir.ui.view'>
        <field name="name">subject.details.list</field>
        <field name="model">subject.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="subject_id"></field>
                <field name="subject_faculty_id"></field>
                <field name="subject_name"></field>
                <field name="subject_chapters" widget="badge"></field>
                <field name="subject_description"></field>
                <field name="subject_textbooks_no"></field>
                <field name="subject_exam_start_date" widget="remaining_days"></field>
                <field name="subject_exam_end_date_time" widget="badge"></field>
                <field name="exam_subject_confirmation" widget="boolean_toggle"></field>
                <field name="subject_textbooks"></field>
                <field name="subject_chapters_search"></field>
                <field name="subject_search_read"></field>
            </tree>
        </field>
    </record>
    <record id="subject_details_form" model='ir.ui.view'>
        <field name="name">subject.details.form</field>
        <field name="model">subject.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h3>
                            <field name="subject_sequence_number" readonly="1"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="subject_id"></field>
                            <field name="subject_name"></field>
                            <field name="subject_chapters"></field>
                            <field name="subject_description"></field>
                            <field name="subject_textbooks_no"></field>
                        </group>
                        <group>
                            <field name="subject_exam_start_date"></field>
                            <field name="subject_exam_end_date_time"></field>
                            <field name="exam_subject_confirmation"></field>
                            <field name="subject_textbooks"></field>
                            <field name="subject_chapters_search"></field>
                            <field name="subject_search_read"></field>
                        </group>
                    </group>
                     <notebook>
                        <page string="Faculties Details">
                            <tree>
                                <field name="subject_faculty_id"></field>
                            </tree>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="subject_details_search" model='ir.ui.view'>
        <field name="name">subject.details.search</field>
        <field name="model">subject.details</field>
        <field name="arch" type="xml">
            <search>
                <field name="subject_id"></field>
                <field name="subject_faculty_id"></field>
                <field name="subject_name"></field>
                <field name="subject_chapters"></field>
                <field name="subject_description"></field>
                <field name="subject_textbooks_no"></field>
                <field name="subject_exam_start_date"></field>
                <field name="subject_exam_end_date_time"></field>
                <field name="exam_subject_confirmation"></field>
                <field name="subject_textbooks"></field>
            </search>
        </field>
    </record>

     <record id="action_examsubject_details" model="ir.actions.act_window">
        <field name="name">Subject Details</field>
        <field name="res_model">subject.details</field>
        <field name="view_mode">tree,search,form</field>
    </record>
</odoo>
