<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="supervisor_details_list" model='ir.ui.view'>
        <field name="name">supervisor.details.list</field>
        <field name="model">supervisor.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="supervisor_id"></field>
                <field name="supervisor_name"></field>
                <field name="supervisor_age"></field>
                <field name="supervisor_fees" widget="badge"></field>
                <field name="supervisor_address"></field>
                <field name="supervisor_start_exam_date" widget="remaining_days"></field>
                <field name="supervisor_end_exam_date_time" widget="badge"></field>
                <field name="supervisor_gender"></field>
                <field name="supervisor_available_on_exam" widget="boolean_toggle"></field>
                <field name="supervisor_documents_attach"></field>
                <field name="supervisor_age_search_count"></field>
            </tree>
        </field>
    </record>

    <record id="supervisor_details_form" model='ir.ui.view'>
        <field name="name">supervisor.details.form</field>
        <field name="model">supervisor.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h3>
                            <field name="supervisor_sequence_number" readonly="1"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="supervisor_id"></field>
                            <field name="supervisor_name"></field>
                            <field name="supervisor_age"></field>
                            <field name="supervisor_fees"></field>
                            <field name="supervisor_address"></field>
                        </group>
                        <group>
                            <field name="supervisor_start_exam_date"></field>
                            <field name="supervisor_end_exam_date_time"></field>
                            <field name="supervisor_gender"></field>
                            <field name="supervisor_available_on_exam"></field>
                            <field name="supervisor_documents_attach"></field>
                            <field name="supervisor_age_search_count"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="supervisor_details_search" model='ir.ui.view'>
        <field name="name">supervisor.details.search</field>
        <field name="model">supervisor.details</field>
        <field name="arch" type="xml">
            <search>
                <field name="supervisor_id"></field>
                <field name="supervisor_name"></field>
                <field name="supervisor_age"></field>
                <field name="supervisor_fees"></field>
                <field name="supervisor_address"></field>
                <field name="supervisor_start_exam_date"></field>
                <field name="supervisor_end_exam_date_time"></field>
                <field name="supervisor_gender"></field>
                <field name="supervisor_available_on_exam"></field>
                <field name="supervisor_documents_attach"></field>
            </search>
        </field>
    </record>

    <record id="action_supervisor_details" model="ir.actions.act_window">
        <field name="name">Supervisor Details</field>
        <field name="res_model">supervisor.details</field>
        <field name="view_mode">tree,search,form</field>
    </record>
</odoo>
